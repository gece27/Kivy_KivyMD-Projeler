#:import get_color_from_hex kivy.utils.get_color_from_hex 


  
MDScreen:
    BoxLayout:
        canvas.before:
            Color:
                rgba: (31/255, 33/255, 33/255, 1)
            RoundedRectangle:
                size: self.width-10, self.height-20
                pos: self.x+10, self.y+10   
        TextInput:
            id: entry
            font_size: 32
            multiline: False
            pos_hint:{"top":1}
            size_hint:1,.15
    
    MDFloatLayout:
        md_bg_color:get_color_from_hex("#BACAC7")
        
        size_hint:1,.90
        CalcGridLayout:
            id: calculator
            display: entry
            rows: 6
            
            cols:1
            size_hint_y:'.8dp'
            padding:50
            spacing: 25
            
        
            BoxLayout:
                spacing:20
                MDFillRoundFlatButton:
                    text: "7"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "8"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "9"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "+"
                    font_size:30
                    md_bg_color:get_color_from_hex("#D88316")
                    on_press: entry.text += self.text
                    
        
            BoxLayout:
                spacing:20
                MDFillRoundFlatButton:
                    text: "4"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "5"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "6"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "-"
                    font_size:30
                    md_bg_color:get_color_from_hex("#D88316")
                    on_press: entry.text += self.text
        
            BoxLayout:
                spacing:20
                MDFillRoundFlatButton:
                    text: "1"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "2"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "3"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "*"
                    font_size:30
                    md_bg_color:get_color_from_hex("#D88316")
                    on_press: entry.text += self.text
        
        
            BoxLayout:
                spacing:20
                MDFillRoundFlatButton:
                    text: "AC"
                    font_size:30
                    md_bg_color:get_color_from_hex("#D81916") 
                    on_press: entry.text = "" 
                MDFillRoundFlatButton:
                    text: "0"
                    font_size:30
                    on_press: entry.text += self.text
                MDFillRoundFlatButton:
                    text: "="
                    font_size:30
                    md_bg_color:get_color_from_hex("#16D825") 
                    on_press: calculator.calculate(entry.text)
                MDFillRoundFlatButton:
                    text: "/"
                    font_size:30
                    md_bg_color:get_color_from_hex("#D88316")
                    on_press: entry.text += self.text
            BoxLayout:
                spacing:15
                MDFillRoundFlatButton:
                    text: "delete"
                    font_size:25
                    md_bg_color:get_color_from_hex("#16D819")
                    on_press: 
                        entry.text = entry.text[:-1] 
                MDFillRoundFlatButton:
                    text: "off"
                    font_size:30
                    md_bg_color:get_color_from_hex("#D81916")
                    on_press: exit(0) #programı kapatır 
                MDFillRoundFlatButton:
                    text: "."
                    font_size:30
                    md_bg_color:get_color_from_hex("#B516D8")
                    on_press:entry.text += self.text    
                MDFillRoundFlatButton:
                    text: "%"
                    font_size:30
                    md_bg_color:get_color_from_hex("#D88316")
                    on_press:entry.text += self.text
